@using CollegeFinder.BAL;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CollegeFinder</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/common_style.css" asp-append-version="true" />
    @*<link rel="stylesheet" href="~/CollegeFinder.styles.css" asp-append-version="true" />*@

    <!-- Icons -->
    <link href="~/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/vendor/simple-datatables/style.css" rel="stylesheet">

</head>
<body>

    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary py-2">
            <div class="mx-2"><img src="~/icons/website-logo.png" class="website-logo" alt="" /></div>
            <button class="navbar-toggler second-button p-0 me-1" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <div class="animated-icon2"><span></span><span></span><span></span><span></span></div>
            </button>
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CollegeTreasure</a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="INS_College" asp-controller="INS_College" asp-action="Index">Colleges</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="INS_Course" asp-controller="INS_Course" asp-action="Index">Courses</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact Us</a>
                    </li>
                    <li class=" d-flex mx-5 @(CommonVariables.UserID() != null ? "d-none" : "")">
                        <a class="login-box btn btn-outline-light" asp-area="MST_Users" asp-controller="MST_User" asp-action="Index">Login | Register</a>
                    </li>
                </ul>
            </div>
            <div class="nav-icons-list">
                <ul class="list-unstyled">
                    <li>
                        <div class="searchBox">
                            <div class="searchToggle">
                                <i class='bx bx-x cancel'></i>
                                <i class='bx bx-search search'></i>
                            </div>
                            <div class="search-field">
                                <input type="text" placeholder="Search...">
                                <i class='bx bx-search'></i>
                            </div>
                        </div>
                    </li>
                    <li class="@(CommonVariables.UserID() == null ? "d-none" : "")">
                        <a class="profile-circle text-decoration-none" asp-area="MST_Users" asp-controller="MST_User" asp-action="Logout">@CommonVariables.Username()?[0]</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header><!-- End Navbar -->

    <!-- Main Content -->
    <div class="container-fluid p-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div><!-- End Main Content -->

    <!-- Footer -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - CollegeFinder
        </div>
    </footer><!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @*<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/common_js.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
